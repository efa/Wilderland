# Makefile to crosscompile 'Wilderland' for Win32 on Linux using GCC+GNUtoolchain
# used on: Linux=>Win.bin32
# require MXE SDL2_image in /opt/mxe/usr/i686-w64-mingw32.static

# MXEROOT point to cross-compiler root path
# MXE     point to cross-compiler tools path
# MCROSS  cross-compiler tools prefix
MXEROOT = /opt/mxe
MXE = $(MXEROOT)/usr/bin
MCROSS = i686-w64-mingw32.static-
PATH=$(MXE):$(PATH)

CC = $(MCROSS)gcc
LD = $(MCROSS)gcc
STRIP = $(MCROSS)strip
PKG_CONFIG=$(MCROSS)pkg-config
CFLAGS = -std=c99 -Wall -O3 -D__USE_MINGW_ANSI_STDIO=1 -m32
SDLCFLAGS = $(shell PKG_CONFIG_PATH_i686_w64_mingw32_static=$(MXEROOT)/usr/i686-w64-mingw32.static/lib/pkgconfig: $(MXE)/$(PKG_CONFIG) --cflags SDL2_image)
SDLMINGWLDFLAGS = -mconsole # on MINGW + SDL force console for debug
LDFLAGS = $(shell PKG_CONFIG_PATH_i686_w64_mingw32_static=$(MXEROOT)/usr/i686-w64-mingw32.static/lib/pkgconfig: $(MXE)/$(PKG_CONFIG) --libs SDL2_image) $(SDLMINGWLDFLAGS) -m32
FILE = WL
SOURCE = $(FILE)
TARGET = $(FILE)mxe32.exe
TAPCON = TapCon/TapConMxe32.exe
CPU = i686
OS = $(uname -o)

all: $(TARGET) $(TAPCON)

$(TARGET): $(SOURCE).o SDLTWE.o spectrum.o Z80.o
	$(MXE)/$(LD) $^ $(LDFLAGS) -o $@

$(SOURCE).o: $(SOURCE).c WL.h GLOBAL_VARS.h MapCoordinates.h SDLTWE.h SPECTRUM.h Z80/Z80.h
	$(MXE)/$(CC) $(CFLAGS) $(SDLCFLAGS) -c $< -o $@

SDLTWE.o: SDLTWE.c WL.h SDLTWE.h
	$(MXE)/$(CC) $(CFLAGS) $(SDLCFLAGS) -c $< -o $@

spectrum.o: Spectrum.c GLOBAL_VARS.h SPECTRUM.h WL.h SDLTWE.h Z80/Z80.h
	$(MXE)/$(CC) $(CFLAGS) $(SDLCFLAGS) -c $< -o $@

Z80.o: Z80/Z80.c GLOBAL_VARS.h SPECTRUM.h Z80/Codes.h Z80/CodesCB.h Z80/CodesED.h Z80/CodesXCB.h Z80/CodesXX.h Z80/Tables.h Z80/Z80.h
	$(MXE)/$(CC) -I. $(CFLAGS) $(SDLCFLAGS) -c $< -o $@

$(TAPCON): TapCon/TapCon.c
	$(MXE)/$(CC) $(CFLAGS) $^ -o $@

strip:
	$(MXE)/$(STRIP) $(TARGET) $(TAPCON)

cleanobj:
	rm -f *.o

cleanexe:
	rm -f $(TARGET) $(TAPCON)

clean: cleanobj cleanexe

bin: all cleanobj strip
